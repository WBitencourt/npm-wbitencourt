{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "dist",
    "lib": ["ES2022", "DOM"],
    "types": ["node", "vitest/globals"],
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
